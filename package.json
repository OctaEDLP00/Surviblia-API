{
  "name": "surviblia-api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "node --loader ts-node src/index.ts",
    "dev:nodemon": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "dev:alternative": "pnpm tsc && node --watch build/index.js",
    "dev:alt": "node --watch --trace-warnings build/src/index.js",
    "lint": "ts-standard"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "mime": "3.0.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/node": "20.4.10",
    "@types/mime": "3.0.1",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "ts-node": "10.9.1",
    "nodemon": "3.0.1",
    "ts-standard": "12.0.2",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "rules": {
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "generic"
        }
      ]
    }
  }
}
