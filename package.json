{
  "name": "surviblia-api",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx ./src/index.ts",
    "dev:watch": "tsx watch ./src/index.ts",
    "dev-old": "node --loader ts-node src/index.ts",
    "dev:nodemon": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "dev:alternative": "pnpm tsc && node --watch build/index.js",
    "dev:alt": "node --watch --trace-warnings build/index.js",
    "build": "pnpm tsc src/index.ts --resolveJsonModule --esModuleInterop --module es2022 --outDir ./build",
    "lint": "ts-standard",
    "co": "sui-mono commit"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.4.1",
    "express": "4.18.2",
    "mime": "4.0.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@s-ui/mono": "2.45.0",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "20.11.7",
    "@types/mime": "3.0.4",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "tsx": "4.7.0",
    "ts-standard": "12.0.2",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "rules": {
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "generic"
        }
      ]
    }
  },
  "packageManager": "pnpm@9.3.0"
}
